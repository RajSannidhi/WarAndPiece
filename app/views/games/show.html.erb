<div class="row">

  <div class="col-8 placeholder">

    <!-- Game Selection Modal or Drop-down -->

    <div class="placeholder">
      
    </div>

    <!-- Game Board -->

    <div class="chessboard">

      <div class="grid">
        <% file = 0 %>
        <% rank = 9 %>

        <% 8.times do %>
          <% rank = rank - 1 %>
          <% 8.times do %>
            <% file = file + 1 %>
            <div class="square">
              <div class=<%= "file#{file}rank#{rank}" %>>
                <% current_game.pieces.each do |piece| %>
                  <% if piece.rank == rank && piece.file == file %>
                    <%= "#{piece.color} #{piece.type}" %>
                  <% end %>
                <% end %>
              </div>
            </div>
          <% end %>
          <br />
          <% file = 0 %>
        <% end %>
      </div>

    </div>

    <!-- Challenges Feed -->

    <div class="placeholder">
      
    </div>
  </div>

  <div class="col-4 placeholder"  

    <!-- Player Name Display -->

    <div class="placeholder">

    </div>

    <!-- Captured Pieces Display -->

    <div class="placeholder">
      
    </div>

    <!-- Surrender button and modal -->

    <div class="placeholder">
      
    </div>

    <!-- Truce button and modal -->

    <div class="placeholder">
      
    </div>

    <!-- Cute image and possibly check/checkmate indicator? -->

    <div class="placeholder">
      
    </div>

  </div>

</div>

