<div class="chessboard">

  <div class="pieces">
    <% file = 0 %>
    <% rank = 9 %>

    <% 8.times do %>
      <% rank = rank - 1 %>
      <% 8.times do %>
        <% file = file + 1 %>
          <div class="square" id="<%= [file, rank] %>">
            <%= link_to '#' do %>     <!-- piece_path(DEFINE PATH TO CURRENT PIECE) -->
              <p><%= "#{file}, #{rank}" %></p>
            <% end %>
          </div>
        <% end %>
      <br />
      <% file = 0 %>
    <% end %>
  </div>

</div>

