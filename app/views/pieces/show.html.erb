<h1>Pieces show page goes here</h1>

<div class="chessboard">

  <div class="pieces">
    <% file = 0 %>
    <% rank = 9 %>

    <% 8.times do %>
      <% rank = rank - 1 %>
      <% 8.times do %>
        <% file = file + 1 %>
          <div class="square" id="<%= [file, rank] %>">
            <% if @piece_coord == [file, rank] %>
              <div class="highlight">
                <p><%= "#{file}, #{rank}" %></p>
              </div>
            <% else %>
              <div>
                <%= link_to piece_path( {piece: { id: @current_piece.id, file: file, rank: rank} }), method: :patch do %>
                  <p><%= "#{file}, #{rank}" %></p>
                <% end %>
              </div>
            <% end %>
          </div>
        <% end %>
      <br />
      <% file = 0 %>
    <% end %>
  </div>

</div>

